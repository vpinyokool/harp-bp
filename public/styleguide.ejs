<%
	var stylesData = public.content.styleguide._data;
%>
<!-- colors -->
<section class="outer-row">
	<div class="inner-row">
		<h1 class="styleguide-title">
			Colors
		</h1>

		<% for ( var i=0; i < stylesData.colors.length; i++ ) { %>
			<div class="colorset">
				<div class="eyebrow">
					<%= stylesData.colors[i].type %>
				</div>
				<% for ( var j=0; j < stylesData.colors[i].content.length; j++ ) { %>
					<div class="figure-wrapper">
						<figure class="<%= stylesData.colors[i].content[j].name %>">
						</figure>
						<figcaption>
							$<%= stylesData.colors[i].content[j].name %>
						</figcaption>
					</div>
				<% } %>
			</div>

		<% } %>
	</div>
</section>

<!--Typography -->

<section class="outer-row">
	<div class="inner-row">
		<h1 class="styleguide-title">
			Typography
		</h1>

		<% for ( var i=0; i < stylesData.typography.length; i++ ) { %>

				<div class="eyebrow">
					<%= stylesData.typography[i].type %>
				</div>
				<% for ( var j=0; j < stylesData.typography[i].content.length; j++ ) { %>
					<div class="title-med">
							ABCDEFGHIJKLMNOPQRSTUVWXYZ<br>
							abcdefghijklmnopqrstuvwxyz<br>
							1234567890<br>
							$¢£¥€&#§*†‡¶©®™@<br>
						<p class="caption">
							<%= stylesData.typography[i].content[j].caption %>
						</p>
					</div>
				<% } %>


		<% } %>
	</div>
</section>

<!--Typestyles -->

<section class="outer-row">
	<div class="inner-row">
		<h1 class="styleguide-title">
			Typestyles
		</h1>

		<% for ( var i=0; i < stylesData.typestyles.length; i++ ) { %>
				<div class="<%= stylesData.typestyles[i].class %>">
					<%= stylesData.typestyles[i].content %>
				</div>
				<p class="caption"><%= stylesData.typestyles[i].caption %></p>

		<% } %>
	</div>
</section>


<!--Ui -->

<section class="outer-row">
	<div class="inner-row">
		<h1 class="styleguide-title">
			Ui
		</h1>

		<% for ( var i=0; i < stylesData.buttons.length; i++ ) { %>
				<div class="<%= stylesData.buttons[i].class %>">
					<%= stylesData.buttons[i].content %>
				</div>
				<%- partial("/library/_components/_button", {
				buttonType:stylesData.buttons[i].type,
				buttonCTA: stylesData.buttons[i].cta,
				buttonClass: stylesData.buttons[i].class,
				isDisable: stylesData.buttons[i].disable
				}) %>
				<p class="caption"><%= stylesData.buttons[i].caption %></p>

		<% } %>

	</div>
</section>


<!--Input -->

<section class="outer-row">
	<div class="inner-row">
		<h1 class="styleguide-title">
			Input
		</h1>
		<% for ( var i=0; i < stylesData.inputs.length; i++ ) {
			if ( stylesData.inputs[i].type = 'text') { %>
				<div class="input-wrapper">
					<input
						type="text"
						placeholder="<%= stylesData.inputs[i].placeholder %>"
						id="<%= stylesData.inputs[i].name %>"
						name="<%= stylesData.inputs[i].name %>"
					/>
					<label for="full-name"><%= stylesData.inputs[i].label %></label>
				</div>
				<p class="caption"><%= stylesData.inputs[i].caption %></p>
		<%	}
 		 } %>



	</div>
</section>